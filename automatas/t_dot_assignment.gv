digraph finite_state_machine {
	rankdir=LR;
	size="10,10"

	node [ shape = doublecircle, label = "0", fontsize  = 14] n0;

	node [ shape = circle, label = "1", fontsize  = 12] n1;

	node [ shape = doublecircle, label = "2", fontsize  = 14] n2;

	node [shape = point ]; qi
	qi -> n0;

	n0 -> n1 [ label = "." ];
	n1 -> n2 [ label = "=" ];
}